<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2Examen231051103.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ubicaciones Salvadas" x:Name="ubicacionSalvadas"
                     IconImageSource="example_icon.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="ubicacionSalvadas_Clicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label Text="Latitud Actual"/>
        <Entry x:Name="latitudActual" 
               IsReadOnly="False"/>

        <Label Text="Longitud Actual"/>
        <Entry x:Name="longitudActual" 
               IsReadOnly="False"/>
        
        <Label Text="Describa la ubicación"/>
        <Editor x:Name="descripLarga" 
                HeightRequest="100"/>

        <Label Text="Descripción Corta"/>
        <Editor x:Name="descripCorta"/>

        <Button x:Name="salvarUbicacion" 
                Text="Salvar Ubicación"
                Clicked="salvarUbicacion_Clicked"/>
        <Button x:Name="ubicacionesSalvadas" 
                Text="Ubicaiones Salvadas"
                Clicked="ubicacionesSalvadas_Clicked"/>
    </StackLayout>
    
</ContentPage>
